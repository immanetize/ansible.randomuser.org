#cloud-config

runcmd:
  - [ sed, -i.bak, -e, 's/PasswordAuthentication.*/PasswordAuthentication no/', /etc/ssh/sshd_config]
  - sed -i -e 's/#?PermitRootLogin.*/PermitRootLogin no/' /etc/ssh/sshd_config
  - [ systemctl, restart, sshd ]

